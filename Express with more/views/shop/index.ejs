<body>
  
    <%-  include("../includes/navigation.ejs")  %>
    <main>
        <h1> my products </h1>
        <p> list of the products </p>
        <% if ( prod.length > 0) { %>
            <div class="grid">
                <% for(let products of prod) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"> <%= products.title %> </h1>
                        </header>
                        <div class="card__image">
                            <img src="products.">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price"><%= products.price %></h2>
                            <p class="product__description"><%= products.description %> </p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                    <% } %>
            </div>
        <% } else  { %>

            <h1> no products as of now </h1>

            <% }  %>
        </div> 
        


    </main>
    
